.ssw-reviews-page-header {
  .review-title {
    font-size: 42px !important;
    line-height: 1.05 !important;
    margin: 0 !important;
    opacity: 1 !important;
  }
  hr {
    display: none;
  }
}
.ssw-reviews-page-header-bar {
  flex-direction: column;
  padding-bottom: 60px;
  #ssw-search-review-wrapper {
    order: 1;
    .ssw-search-review {
      height: auto;
      max-height: 48px;
      min-height: 48px;
      z-index: 1;
      min-width: 500px;
      margin: 20px 0 30px;
    }
  }
  button.ssw-add-review {
    order: 2 !important;
    border-radius: 40px;
    height: 48px;
    width: 200px;
  }
  .ssw-reviews-sort {
    order: 3;
    position: absolute;
    left: 0;
    bottom: -40px;
    height: 40px;
    margin-top: 0 !important;
  }
  #ssw-review-avg {
    display: none !important;
  }
}
.ssw-reviews-page .ssw-review-message-wrapper {
  margin-bottom: 0 !important;
}
#ssw-review-switcher-buttons-wrapper {
  display: flex !important;
  width: 100%;
  justify-content: end;
  margin-bottom: 0 !important;
  input {
    padding: 0;
    height: 40px;
  }
}
.ssw-add-review-content {
  background: #fff;
  padding: 30px;
  margin-bottom: 60px;
}


.ssw-item {
  background: #fff;
  padding: 30px 40px;
  display: flex;
  flex-direction: column;
  .ssw-pull-left {
    float: none !important;
    margin-right: 0 !important;
    order: 1;
    img {
      background-color: {{ light }};
      width: 44px !important;
      border-radius: 12px;
    }
  }
  .ssw-review-item-bar {
    display: flex;
    flex-direction: column;
    order: 2;
    position: absolute;
    margin-inline-start: 64px;
  }
  span.ssw-reviewed-product-title {
    order: 3;
  }
  .ssw-text {
    order: 4;
  }
  .ssw-recommend-images-wrapper {
    float: right;
  }
  .ssw-recommend-image-wrapper {
    margin: 0;
  }
  .ssw-starsd {
    order: 5;
  }
  .ssw-review-opts {
    order: 6;
  }
  br {
    display: none;
  }
}
.ssw-growave-branding {
  display: none !important;
}