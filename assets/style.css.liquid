/* ————— Grid ———————————————————— */
{%- liquid
  assign col-gap = settings.col-gap
  assign row-padding = settings.row-padding
-%}
body > main {
  overflow-x: hidden;
}
.lg-row {
  max-width: 1360px;
  width: 100%;
  margin: 0 auto;
  padding-left: {{ col-gap }}px;
  padding-right: {{ col-gap }}px;
  display: flex;
  column-gap: {{ col-gap }}px;
  flex-wrap: wrap;
  &.lg-grid-2 .lg-col {
    width: calc((100% - {{ col-gap }}px) / 2);
  }
  &.lg-grid-3 .lg-col {
    width: calc((100% - ({{ col-gap }}px * 2)) / 3);
    &.lg-grow {
      width: calc(((100% - ({{ col-gap }}px * 2)) / 3) * 2 + {{ col-gap }}px);
    }
  }
  &.lg-grid-4 .lg-col {
    width: calc((100% - ({{ col-gap }}px * 3)) / 4);
    &.lg-grow {
      width: calc(((100% - ({{ col-gap }}px * 3)) / 4) * 2 + {{ col-gap }}px);
    }
  }
  &.lg-grid-5 .lg-col {
    width: calc((100% - ({{ col-gap }}px * 4)) / 5);
    &.lg-grow {
      width: calc(((100% - ({{ col-gap }}px * 4)) / 5) * 2 + {{ col-gap }}px);
    }
  }
  &.lg-grid-6 .lg-col {
    width: calc((100% - ({{ col-gap }}px * 5)) / 6);
    &.lg-grow {
      width: calc(((100% - ({{ col-gap }}px * 5)) / 6) * 2 + {{ col-gap }}px);
    }
  }
}
