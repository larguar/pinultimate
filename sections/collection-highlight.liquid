<div class="lg-collection bg-light">
  <div class="lg-row">
    {%- for collection in collections -%}
      {%- assign collection = collection -%}
      {%- if collection.handle == section.settings.collection -%}
        <div class="lg-section-header">
          <p class="subhead">{{ collection.title }}</p>
          <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="lg-products-carousel owl-carousel owl-theme">
          {%- for product in collection.products limit: 6 -%}
            <div class="item">
              <a href="{{ product.url }}" class="lg-card">
                <div class="lg-card-intro">
                  <div class="lg-card-image">
                    <div class="lg-image-container">
                      <img
                        srcset="
                          {%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ product.featured_media | image_url }} {{ product.featured_media.width }}w
                        "
                        src="{{ product.featured_media | image_url: width: 533 }}"
                        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                        alt="{{ product.featured_media.alt | escape }}"
                        class="motion-reduce"
                        loading="lazy"
                        width="{{ product.featured_media.width }}"
                        height="{{ product.featured_media.height }}"
                      >
                    </div>
                  </div>
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
        <div class="lg-section-footer">
          <div class="button-container">
            <a class="button" href="{{ collection.url }}">Shop {{ collection.title }}</a>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% javascript %}
  $('.lg-products-carousel').owlCarousel({
      responsiveClass: true,
      margin: 0,
      nav: false,
      dots: false,
      autoplayTimeout: 10000,
      autoplayHoverPause: true,
      responsive: {
          0:{
            autoplay: true,
            loop: true,
            items: 3
          },
          480:{
            autoplay: true,
            loop: true,
            items: 4
          },
          768:{
            autoplay: true,
            loop: true,
            items: 5
          },
          1024:{
            autoplay: false,
            loop: false,
            items: 6
          }
      }
  });
{% endjavascript %}

{% schema %}
{
  "name": "Collection Highlight",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Collection Highlight"
    }
  ]
}
{% endschema %}
