{% assign ab_height = 20 %}
{% assign owl_width = 500 %}
{% assign owl_height = 20 %}

{%- style -%}
  .lg-announcement-bar .lg-row {
    align-items: center;
    justify-content: center;
  }
  .lg-announcement {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    height: {{ ab_height }}px;
    .lg-announcement-carousel {
      transform: rotate3d(0, 0, 1, 90deg);
      width: {{ owl_width }}px;
      .owl-stage-outer {
        padding: calc(({{ owl_width }}px - {{ owl_height }}px) / 2) 0;
        width: calc(({{ owl_width }}px + {{ ab_height }}px) / 2);
      }
      .item {
        transform: rotate3d(0, 0, 1, -90deg);
        text-align: center;
        line-height: {{ owl_height }}px;
      }
    }
  }
{%- endstyle -%}

<div class="lg-announcement-bar {{ section.settings.background-color }}">
  <div class="lg-row lg-grid-3">
    <div class="lg-col lg-social">
      {% render 'social-icons' %}
    </div>
    <div class="lg-col lg-announcement">
      <div class="lg-announcement-carousel owl-carousel">
        {%- for block in section.blocks -%}
          <div class="item">
            {{ block.settings.text }}
          </div>
        {%- endfor -%}
      </div>
    </div>
    <div class="lg-col lg-login">
      {%- if shop.customer_accounts_enabled -%}
        <a class="display" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" rel="nofollow">
          Login
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

