{% javascript %}
  $('.lg-announcement-carousel').owlCarousel({
    items: 1,
    loop: true,
    nav: false,
    margin: 0,
    autoplay: true,
    autoplayHoverPause: true,
    autoplayTimeout: speed,
    mouseDrag: false,
    touchDrag: false,
    pullDrag: false,
    dots: false
  });
{% endjavascript %}

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 5,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "background-color",
      "options": [
        {
          "value": "bg-dark",
          "label": "Dark"
        },
        {
          "value": "bg-light",
          "label": "Light"
        },
        {
          "value": "",
          "label": "White"
        },
      ],
      "default": "bg-dark",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Announcements"
    },
    {
      "type": "range",
      "id": "slide-speed",
      "min": 1,
      "max": 15,
      "step": 1,
      "unit": "s",
      "label": "Rotation Speed",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "Welcome to Pinultimate",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
